<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head'); %>
  <script src="{process.env.BROWSER_REFRESH_URL}"></script>
<body>
  <header>
    <%- include('./partials/headerLogIn', {page_name:'login'}) %>
  </header>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Sofia">

  <style>
    .fst-italic {font-family: "Roboto", sans-serif !important; font-weight: 300; font-size: small;}
    form.container{
      width: 800px !important;
    }
  </style>
    <form class="container border" action="" method="post">
      <input type="hidden" name="_csrf" value="">
      <input type="hidden" name="token" value="<%= token %>">
      <input type="hidden" name="username" value="<%= username %>">
        <% if (typeof message != 'undefined') { %>
          <div class="alert alert-content my-2 <%= message.class %>"><%= message.text %> 
          </div>
          <% } %>
        <div style="height: 192px !important;" class="row d-flex justify-content-between mb-0">
            <div class="col-md-9">
              <div class="col-md-3 m-4 w-100">
                <label for="username" class="form-label fw-lighter">Password 1</label>
                <input type="text" name="password" class="form-control w-50" id="username_input" value="" required>
              </div>
              <div class="col-md-3 m-4 w-100">
                <label for="password" class="form-label fw-lighter">Password 2</label>
                <input type="password" name="password2" class="form-control w-50" id="password_input" value="Otto" required>
              </div>
            </div>
            <div class="col-md-3">
            </div>
          </div> 
          <div class="col-12 m-4 py-3">
            <button class="btn-sm btn-light border border-0 btn-md fw-light" style="width: 110px; background-color: #a2aff3 !important;" id="button_login" type="post">Reset my password</button>
          </div>
    </form>
        </body>
        <style>
          .alert-content{
            font-size: .7rem !important;
          }
         </style>
  <%- include('./partials/loginJS') %> 
  <%- include('./partials/footerLogSignIn') %>
</html>