<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head'); %>
  <script src="{process.env.BROWSER_REFRESH_URL}"></script>
<body style="
min-height: 100vh; 
display: flex;
flex-direction: column;">
  <header>
    <%- include('./partials/headerLogIn', {page_name:'login'}) %>
  </header>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Sofia">

  <style>
    .fst-italic {font-family: "Roboto", sans-serif !important; font-weight: 300; font-size: small;}
    form.container{
      width: 700px !important;
    }
  </style>
    <form class="container border"method="post">
      <input type="hidden" name="_csrf" value="">
        <% if (typeof message != 'undefined') { %>
          <div class="alert alert-content my-2 <%= message.class %>"><%= message.text %> 
          </div>
          <% } %>
        <div style="height: 192px !important;" class="row d-flex justify-content-between mb-0">
            <div class="col-md-9">
              <div class="col-md-3 m-4 w-100">
                <label for="username" class="form-label fw-lighter">Username </label>
                <input type="text" name="username" class="form-control w-50"  id="username_input" value="<%= username %>" required>
              </div>
              <div class="col-md-3 m-4 w-100">
                <label for="password" class="form-label fw-lighter">Password</label>
                <input type="password" name="password" class="form-control w-50" id="password_input" placeholder="" required>
              </div>
            </div>
            <div class="col-md-3">
            </div>
          </div> 
          <div id="div_log" class="col-12 m-0 mx-4 mt-0 ">
            <p><a href="/reset-password"  class="text-primary fst-italic text-decoration-none">Forgot your password?</a></p>
          </div>
          <div class="col-12 m-4 py-3">
            <button class="btn btn-light border border-0 btn-md fw-light" style="width: 110px; background-color: #a2a8d3 !important;" id="button_login" type="post">Log In</button>
          </div>
    </form>
</body>
        <style>
          .alert-content{
            font-size: .7rem !important;
          }
         </style>
  <%- include('./partials/loginJS') %> 
  <%- include('./partials/footerLogSignIn') %>
</html>