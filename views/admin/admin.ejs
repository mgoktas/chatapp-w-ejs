<%- include('../partials/head') %>
<%- include('../partials/header', {page_name:'admin'}) %>
<style>
     .container-sm {
      width: 400px;
    }
</style>
<!DOCTYPE html>
<html lang="en">
<head> 
</head>
<body>
    

    <div class="container mt-3">
          <div class="row">
            <div class="text-center text-dark fs-3 my-3">Users</div>
            <div class="col-md-12 mt-3">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th style="width: 50px;">Id</th>
                                <th style="width: 150px;">Profile</th>
                                <th>User</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Password</th>
                                <th style="width: 130px;">action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% user.forEach(each => { %>
                            <tr>
                                <td><%= each.id %> </td>
                                <td>
                                    <img src="/static/images/<%= each.img %>" class="img-fluid" alt="">
                                </td>
                                <td>
                                    <%= each.usertype.name %> 
                                </td>
                                <td>
                                    <%= each.name %> 
                                </td>
                                <td>
                                    <%= each.email %> 
                                </td>
                                <td>
                                    <%= each.password %> 
                                </td>
                                <td>
                                    <a class="btn btn-sm btn-primary" href="/admin/edit/<%= each.id %>">edit</a>
                                    <a class="btn btn-sm btn-danger" href="/admin/del/<%= each.id %>">delete</a>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
            </div>
            <div class="text-center text-dark fs-3 my-3">User Types</div>
            <div class="col-md-12 mt-3">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th style="width: 50px;">Id</th>
                            <th>Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% usertypes.forEach(each => { %>
                        <tr>
                            <td><%= each.id %> </td>
                            <td>
                                <%= each.name %> 
                            </td>
                            <td class="w-25">
                                <a class="btn btn-sm btn-primary" href="/admin/edit/usertype/<%= each.id %>">edit</a>
                                <a class="btn btn-sm btn-danger" href="/admin/del/usertype/<%= each.id %>">delete</a>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
        </div>
            </div>
        </div>
    </body>
</html>





<%- include('../partials/footer') %>