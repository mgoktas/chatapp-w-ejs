<%- include('../partials/head') %>
<%- include('../partials/header', {page_name:'admin'}) %>
<style>
     .container-sm {
      width: 400px;
    }
</style>
<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../partials/head")  %> 
</head>
<body>
    
    <div class="container mt-3">
        <div class="row">
            <div class="col-md-12 mt-3">
                <form method="post" enctype="multipart/form-data">
                    <div class="row mb-3">
                        <label for="baslik" class="col-sm-2 col-form-label">Id</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" id="baslik" name="id" value="<%= user.id %>">
                            <input type="hidden" class="form-control" id="img" name="image" value="<%= user.img %>">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="baslik" class="col-sm-2 col-form-label">Name</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" id="baslik" name="name" value="<%= user.name %> ">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="aciklama" class="col-sm-2 col-form-label">Email</label>
                        <div class="col-sm-4">
                            <input  class="form-control" rows="10" name="email" value="<%= user.email %>">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="aciklama" class="col-sm-2 col-form-label">Password</label>
                        <div class="col-sm-4">
                            <input  class="form-control" rows="10" name="password" value="<%= user.password %>">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="resim" class="col-sm-2 col-form-label">Image</label>
                        <div class="col-sm-4">
                            <img src="/static/images/<%= user.img %>" class="img-fluid w-25 my-2 rounded"  alt="">
                            <input type="file" class="form-control" id="resim" name="image">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4 offset-sm-2">
                          <button type="submit" class="btn btn-primary">submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</body>
</html>





